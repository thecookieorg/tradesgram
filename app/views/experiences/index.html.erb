<%= render 'dashboard_users/nav' %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>My Work Experiences</h3>


 <table class="table table-bordered">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Title</th>
      <th>Location</th>
      <th>Time start</th>
      <th>Time end</th>
      <th>Currently work here</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.company_name %></td>
        <td><%= experience.title %></td>
        <td><%= experience.location %></td>
        <td><%= experience.time_start %></td>
        <td><%= experience.time_end %></td>
        <td><%= experience.currently_work_here %></td>
        <td><%= experience.description %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <p><%= link_to 'New Experience', new_experience_path, class: "btn btn-success" %></p>
  <p><%= link_to 'Back', root_path, class: "btn btn-link" %></p>
    </div>
  </div>
</div>


<%= render 'layouts/footer' %>
