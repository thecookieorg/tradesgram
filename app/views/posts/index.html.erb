<%= render 'dashboard_users/nav' %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>My Posts</h3>


 <table class="table table-bordered" style="background-color: white;">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <p><%= link_to 'New Post', new_post_path, class: "btn btn-success" %></p>
  <p><%= link_to 'Back', root_path, class: "btn btn-link" %></p>
    </div>
  </div>
</div>


<%= render 'layouts/footer' %>


