<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag 'col-p1.jpg' %>
      <%= image_tag 'col-p2.jpg' %>
      <%= image_tag 'col-p3.jpg' %>
      <br>
      <div style="margin-top:4px;">
        <%= image_tag 'col-p4.jpg' %>
        <%= image_tag 'col-p5.jpg' %>
        <%= image_tag 'col-p6.jpg' %>
      </div>
    </div>
        <div class="col-md-6">
            <h2 style="font-size: 30px; color: #010101; font-weight: 600; margin: 0px 0px 5px 0px;">Forgot your password?</h2>
            <div class="col-md-8" style="margin-top: 10px;">
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Reset my Tradesgram password", class: "btn btn-primary" %>
                </div>
              <% end %>
              <%= render "users/shared/links" %>
            </div>
        </div>
  </div>
</div>

